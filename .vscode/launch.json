  "version": "0.2.0",
  "configurations": [ 
    {
      "name": "LOCAL rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "0.0.0.0",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "REMOTE rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "CHANGEME.TO.SOMETHING",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "type": "Ruby",
      "request": "launch",
      "name": "VANILLA",
      "program": "${workspaceRoot}/main.rb"
    },
    {
        "type": "Ruby",
        "request": "launch",
        "name": "APP TARGET LIST",
        "program": "${workspaceRoot}/main.rb",
        "args": ["-t","iplist.txt"]
    },
    {
      "type": "Ruby",
      "request": "launch",
      "name": "APP DEBUG VERBOSE",
      "program": "${workspaceRoot}/main.rb",
      "args": ["-t","iplist.txt","-d","-v"]
  }
  ]
}